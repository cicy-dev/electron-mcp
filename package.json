{
  "name": "electron-mcp",
  "version": "1.0.0",
  "description": "Electron MCP",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "test": "jest --forceExit --testTimeout=30000 --runInBand",
    "test:all": "jest --forceExit --testTimeout=30000",
    "test:ls": "node test-ls.js",
    "build": "electron-builder --publish never",
    "build:win": "electron-builder --win --publish never",
    "build:linux": "electron-builder --linux --publish never"
  },
  "build": {
    "appId": "com.electron.mcp",
    "productName": "Electron MCP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["deb", "AppImage"],
      "category": "Development"
    }
  },
  "keywords": [
    "electron",
    "mcp",
    "web-scraping",
    "capture",
    "cdp"
  ],
  "author": "AI Clone Generator",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chrome-remote-interface": "^0.33.0",
    "cors": "^2.8.5",
    "electron-log": "^5.2.4",
    "express": "^4.18.2",
    "js-beautify": "^1.15.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "supertest": "^6.3.3"
  }
}
